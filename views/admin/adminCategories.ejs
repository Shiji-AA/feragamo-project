            <div class="content-header">
                <div>
                    <h2 class="content-title card-title">Category List </h2>
                    
                </div>
              
            </div>

           


            <div class="card mb-4">
                    <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th scope="col">Name</th>                                   
                                    <th scope="col">Description</th>                                                                     
                                    <th scope="col" class="text-end"> Action </th>
                                    <th scope="col" class="text-center"> Category Status </th>
                                </tr>
                            </thead>
                            <tbody>

                                <!-- edit and delete -->

                                <% categories.forEach(function(category) { %>
                                    <tr>
                                        <td><b><%= category.name %></b></td>                                       
                                        <td><b><%= category.description %></b></td>                                      
                                        <td class="text-end">
                                            <a href="/admin/dashboard/categories/edit?id=<%= category._id %>" class="btn btn-md rounded font-sm">Edit</a>
                                        </td>
                                        <td>
                                            <!-- soft deletion -->
                                               <div class="form-check form-switch" style="margin-left: 30px;">
                                                <% if (category.isActive === true ) { %>
                                                    <p style="color: rgb(35, 146, 7);">category Active</p>
                                                    <button><a href="/unListCategory/<%= category._id %>">Deactivate</a></button>
                                                    
                                                  <!-- <input class="form-check-input" type="checkbox" id="categoryToggle"  checked>
                                                  <label class="form-check-label toggle-label" for="categoryToggle"></label> -->
                                                <% } else { %>
                                                    <p style="color: brown;">category Inactive</p>
                                                   <button> <a href="/reListCategory/<%= category._id %>">Activate</a></button>
                                                  <!-- <input class="form-check-input" type="checkbox" id="categoryToggle">
                                                  <label class="form-check-label toggle-label" for="categoryToggle"></label> -->
                                                  
                                                <% } %> 
                                            </td>
                                       
                                    </tr>
                                <% }); %>  
                                
                                    <!-- edit and delete ends here -->
                                </tbody> 
                         </table>
                                                 </div> 
                                                 </div> 
            
                                                </div> 

