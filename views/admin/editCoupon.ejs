<section class="content-main">


    
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Edit Coupon Details</h2>
                <div>

                </div>
            </div>
            <% if (typeof message !=="undefined" ) { %>
                <p style="color:red" id="errormsg">
                    <%= message %>
                </p>
                <% } %>
        </div>
        <div class="col-lg-12">
            <div class="card mb-4">               
                <div class="card-body">



                    
                        <form action="/updateCoupon/?couponId=<%=couponDetails._id%>%>" method="post">
                        <div class="mb-4">
                            <div class="row">
                                <div class="col-lg-4">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="couponCode" name="couponCode" value="<%= couponDetails.couponCode %>">

                                    <div style="color: red;" id="couponCodeError"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="couponDescription" class="form-label">Coupon Description</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="couponDescription" name="couponDescription" value="<%= couponDetails.couponDescription %>">
                                    
                                        <div id="couponDescriptionError" style="color: red;"></div>
                                </div>

                                <div class="col-lg-4">
                                    <label for="couponDiscount" class="form-label">Discount</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="couponDiscount" name="couponDiscount" value="<%= couponDetails.couponDiscount %>">
                                    
                                        <div id="couponDiscountError" style="color: red;"></div>
                                </div>

                             <div class="col-lg-4">                                
                           <% var expiryDate = new Date(couponDetails.couponExpiry)%>
                           <%var formatted = expiryDate.toISOString().split('T')[0] %>
                                <label for="couponExpiry" class="form-label">Expiry</label>
                               
                                <input type="date" placeholder="Type here" class="form-control"
                                    id="couponExpiry" name="couponExpiry" value="<%= formatted %>">
                                    <div id="couponExpiryError" style="color: red;"></div>
                                </div>

                                <div class="col-lg-4">
                                    <label for="maximumAmount" class="form-label">Max Discount Amount</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="maximumAmount" name="maximumAmount" value="<%= couponDetails.maximumAmount%>">
                                   
                                        <div id="maximumAmountError" style="color: red;"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="minimumAmount" class="form-label">Min Purchase Amount</label>
                                    <input type="text" placeholder="Type here" class="form-control" id="minimumAmount" name="minimumAmount" value="<%= couponDetails.minimumAmount %>">
                                  
                                        <div id="minimumAmountError" style="color: red;"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary"  onclick="return validateCouponForm() "><i
                                    class="text-muted material-icons md-post_add" ></i>Update</button>
                        </div>                        
                    </form>



                </div>
            </div> <!-- card end// -->






