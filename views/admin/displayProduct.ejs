                <a href="/addProduct" class="btn btn-primary btn-sm rounded">+Create new</a>
            </div>
        </form>

                       <!--Table starts-->

            <div class="card-body">
                <div class="table-responsive">


                    <table class="table table-hover" id="myTable">


                        <thead>
                            <tr>
                                <th>Product</th>
                                <th>Brand</th>
                                <th>Gender</th>
                                <th>Category</th>
                                <th>Quantity</th>
                                <th>price</th>
                                <th>Action </th>
                            </tr>
                        </thead>
                         <tbody>
                            <tr>
                            </tr>

                            <% for(let i=0;i<product.length;i++){ %>
                                <tr>
                                    <td width="30%">
                                        <a href="#" class="itemside">
                                            <div class="info pl-3">
                                                <h6 class="mb-0 title">
                                                    
                                                    <img src="/productImages/<%=product[i].images[0]%>" class="img-sm img-thumbnail" alt="Item">
                                                </h6>
                                            </div>
                                            <h6 class="mb-0 tooltip-ellipsis" title="<%=product[i].name %>"><%= product[i].name %></h6>
                                        </a>
                                    </td>

                                    <td>
                                        <h6 class="mb-0 tooltip-ellipsis" title="<%=product[i].description %>"><%= product[i].description %></h6>
                                    </td>
                                    <td>
                                        <h6 class="mb-0 tooltip-ellipsis" title="Gender"><%= product[i].gender %></h6>
                                    </td>
                                    <td>
                                        <h6 class="mb-0 tooltip-ellipsis" title="<%=product[i].category %>"><%=product[i].category%></h6> 
                                    </td>
                                    <td>
                                        <h6 class="mb-0 tooltip-ellipsis" title="<%=product[i].stock %>"><%= product[i].stock %></h6>
                                    </td>
                                    <td>
                                        <h6 class="mb-0 tooltip-ellipsis" title="<%=product[i].price %>"><%= product[i].price %></h6>
                                    </td>

                                    <td>
                                        
                                        <a href="/admin/dashboard/products/edit?id=<%=product[i]._id %>" class="btn btn-md rounded font-sm">Edit</a>

                                      
                                    </td>
                                    <td>
                                        <div class="form-check form-switch" style="margin-left: 30px;"></div>

                                        <% if (product[i].isListed === true ) { %>
                                             <button><a href="/admin/unListProduct/<%=product[i]._id %>">Deactivate</a></button>
                                            <p style="color: rgb(35, 146, 7);">Product Active</p>
                                           
                                            
                                          <!-- <input class="form-check-input" type="checkbox" id="categoryToggle"  checked>
                                          <label class="form-check-label toggle-label" for="categoryToggle"></label> -->
                                        <% } else { %>
                                            <button> <a href="/admin/reListProduct/<%=product[i]._id %>">Activate</a></button>
                                            <p style="color: brown;">Product Inactive</p>
                                         
                                          <!-- <input class="form-check-input" type="checkbox" id="categoryToggle">
                                          <label class="form-check-label toggle-label" for="categoryToggle"></label> -->
                                          
                                        <% } %> 
                                        
                                        <!-- <a href=""> <button class="btn btn-md rounded font-sm">Deactivate</button> </a>
                                        <p style="color: rgb(35, 146, 7);">category Active</p>
                                        -->

