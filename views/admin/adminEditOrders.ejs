    /* Add styles for the entire section */
/* Body background color */
body {
  background-color: #f8f8f8;
}

/* Add styles for the entire section */
section {
  background-color: #ffffff;
  padding: 20px;
  border-radius: 5px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
}

/* Style for the card container */
.card {
  background-color: #f9f9f9;
  border: 1px solid #e5e5e5;
  border-radius: 10px;
  padding: 20px;
  margin-bottom: 20px;
}

/* Style for headings */
h4 {
  font-weight: bold;
  color: #333;
}

/* Style for labels */
label {
  font-weight: bold;
  color: #555;
}

/* Style for select dropdown */
select {
  background-color: #f8f8f8;
  border: 1px solid #ccc;
  border-radius: 5px;
  padding: 5px;
  color: #555;
}

/* Style for status text based on the status value */
.card-text.pending {
  color: #007EFF;
}

.card-text.cancelled {
  color: #FF3700;
}

.card-text.delivered {
  color: #01FF01;
}

/* Style for product details */
.product-thumbnail {
  width: 130px;
  overflow: hidden;
}

.product-thumbnail img {
  max-width: 100%;
  max-height: 130px;
}

/* Style for the product details card */
.product-details-card {
  background-color: #f0f0f0;
  margin: 5px 0;
  padding: 10px;
  border-radius: 5px;
}

/* Media query for mobile and tablet responsiveness */
@media screen and (max-width: 768px) {
  .col-md-3 {
    width: 100%;
    margin-bottom: 10px;
  }
}

</style>

