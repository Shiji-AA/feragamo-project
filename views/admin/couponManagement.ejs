<section class="content-main">


    
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Add New Coupon</h2>
                <div>

                </div>
            </div>
            <% if (typeof message !=="undefined" ) { %>
                <p style="color:red" id="errormsg">
                    <%= message %>
                </p>
                <% } %>
        </div>
        <div class="col-lg-12">
            <div class="card mb-4">
                <div class="card-header">
                    <h4>COUPON DETAILS</h4>
                    
                </div>
                <div class="card-body">
                    <!-- AddCoupon Form starts here -->

                    <form action="/addCoupon" method="post" onsubmit="" >
                        <div class="mb-4">
                            <div class="row">
                                <div class="col-lg-4">
                                    <label for="couponCode" class="form-label">Coupon Code</label>
                                    <input type="text" placeholder="Type here" class="form-control"
                                        id="couponCode" name="couponCode">
                                    <div  style="color: red;" id="couponCodeError"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="couponDescription" class="form-label">Coupon Description</label>
                                    <input type="text" placeholder="Type here" class="form-control"
                                        id="couponDescription" name="couponDescription">
                                        <div id="couponDescriptionError" style="color: red;"></div>
                                </div>

                                <div class="col-lg-4">
                                    <label for="couponDiscount" class="form-label">Discount</label>
                                    <input type="text" placeholder="Type here" class="form-control"
                                        id="couponDiscount" name="couponDiscount">
                                        <div id="couponDiscountError" style="color: red;"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="couponExpiry" class="form-label">Expiry</label>
                                    <input type="date" placeholder="Type here" class="form-control"
                                        id="couponExpiry" name="couponExpiry">
                                        <div id="couponExpiryError" style="color: red;"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="maximumAmount" class="form-label">Max Discount Amount</label>
                                    <input type="text" placeholder="Type here" class="form-control"
                                        id="maximumAmount" name="maximumAmount">
                                        <div id="maximumAmountError" style="color: red;"></div>
                                </div>
                                <div class="col-lg-4">
                                    <label for="minimumAmount" class="form-label">Min Purchase Amount</label>
                                    <input type="text" placeholder="Type here" class="form-control"
                                        id="minimumAmount" name="minimumAmount">
                                        <div id="minimumAmountError" style="color: red;"></div>
                                </div>
                            </div>
                        </div>
                        <div class="text-center">
                            <button type="submit" class="btn btn-primary" onclick="return validateCouponForm()"><i
                                    class="text-muted material-icons md-post_add" ></i>Add New Coupon</button>
                        </div>
                        
                    </form>
                     <!-- AddCoupon Form ends here -->
                </div>
            </div> <!-- card end// -->


            <div class="card mb-4">
                <div class="card-header">
                    <h4>EXISTING COUPON DETAILS</h4>
                </div>
                <table  class="table">
                    <thead>
                        <tr>
                            <th>Sl.No.</th>
                            <th>Code</th>
                            <th>Description</th>
                            <th>Discount</th>
                            <th>Expiry</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        <%for(let i=couponDetails.length-1;i>=0 ;i--){%>
                        <tr>
                            <td><%=couponDetails.length - i%></td>
                            <td><%=couponDetails[i].couponCode%></td>
                            <td> <% const maxDescriptionLength = 100;
                                const description = couponDetails[i].couponDescription.length > maxDescriptionLength
                                     ? couponDetails[i].couponDescription.slice(0, maxDescriptionLength) + '...'
                                     : couponDetails[i].couponDescription;
                             %>
                             <%= description %></td>
                            <td><%=couponDetails[i].couponDiscount%>%</td>

                            <%const dateTimeStamp= new Date(couponDetails[i].couponExpiry)
                            const expiryDate = dateTimeStamp.toLocaleDateString();%>
                            <td><%=expiryDate%></td>

                            <td><a href="/couponManagement/edit/<%=couponDetails[i]._id%>" class="btn btn-success" id="editButton">Edit</a>
                            <a href="/deleteCoupon/<%=couponDetails[i]._id%>" class="btn btn-danger" id="editButton" onclick="" >Delete</a>
                            
                            </td>
                        </tr>
                        <%}%>
                        <tbody>
                        </tr>
                        
                            <tr>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                                <td></td>
                               
                               
                            </tr>
                        
                          
                        </tbody>
                    </table>
                </div> <!-- table-responsive //end -->
            </div> <!-- card-body end// -->
        </div> <!-- card end// -->

                    </tbody>
                </table>
            </div>
