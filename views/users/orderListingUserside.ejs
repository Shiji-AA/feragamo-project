<main class="main">
    <section class="pt-40 pb-70 pl-70 pr-70">    
    
        <div class="tab-pane" id="orders" role="tabpanel" aria-labelledby="orders-tab">
            <div class="card">
                <div class="card-header">
                    <h5 class="text-start ">Your Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
        
                                <tr>
                                    <th  class="text-center">OrderId</th>
                                    <th  class="text-center">Date</th>
                                    <th  class="text-center">Status</th>
                                    <th  class="text-center">Total</th>
                                    <th  class="text-center">Actions</th>
                                    <th  class="text-center">Download</th>
                                  

                                </tr>
        
                            </thead>
                            <tbody>
                                <% orders.reverse(); %>
                                <% for(odd of orders){ %>
                                    <tr>
                                        <td  class="text-center">
                                            <%=odd.orderId %>
                                        </td>
        
                                        <td  class="text-center">
                                            <%= odd.createdOn %>
                                        </td>

                                        <td class="text-center">
                                            <span class="
                                                <% 
                                                    if (odd.status === 'Shipped') {
                                                        %>status-shipped<%
                                                    } else if (odd.status === 'Delivered') {
                                                        %>status-delivered<%
                                                    } else if (odd.status === 'Pending') {
                                                        %>status-pending<%
                                                    } else if (odd.status === 'Cancelled') {
                                                        %>status-cancelled<%
                                                    }
                                                %>"
                                            ><%= odd.status %></span>
                                        </td>

                                        
                                        <td  class="text-center">â‚¹ <%= odd.totalAmount %>
                                        </td>
                                        <td  class="text-center"><a href="/viewOrderdetails?orderId=<%=odd.orderId %>"

                                                class="btn-small d-block">View</a></td>

                                        <% if (odd.status === 'Delivered') { %>
                                        <td class="text-center">
                                        <a href="/orders/invoice/?orderId=<%= odd.orderId %>" class="btn btn-md rounded font-sm" id="cmd">Invoice</a>
                                        </td>
                                        <% } %> 

                                       
                                            
                                    </tr>                                  
                                     
                                        <% } %>
        
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>  
</section>
