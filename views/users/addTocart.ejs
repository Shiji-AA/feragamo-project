                                </thead>

                                <tbody>

                                    <% for (const item of userCart.cart) { %>
                                        <tr id="remove_<%= item._id %>">
                                            <td class="image product-thumbnail">
                                                <% if (item.productId.images) { %>
                                                    <img src="/productImages/<%= item.productId.images[0]%>"
                                                        alt="image">
                                                    <% } %>
                                            </td>

                                            <td class="product-des product-name">
                                                <h5 class="product-name"><a href="#">
                                                        <%= item.productId.name %>
                                                    </a></h5>
                                            </td>
                                            <td class="price" data-title="Price">
                                              <span>₹</span><span><%= item.productId.price %></span>
                                            </td>
                                            <!-- Cart quantity starts here-->
                                            
                                            <td class="text-center" data-title="Stock">
                                                <!-- increment Button -->
                                                <div class="detail-qty border radius m-auto" style="display: inline;">
                                                    <!-- decrement Button -->
                                                    <button data-min="1" class="cart-item-count btn btn-danger"
                                                        id="decrement<%= item.productId._id %>"
                                                        onclick="decrementQuantity('<%= item.productId._id %>')"
                                                        style="font-size: 12px; padding: 5px 10px;margin-left:12px; background-color: #088178; color: hsl(0, 20%, 94%);">-</button>
                                            
                                                    <span id="quantity_<%= item.productId._id %>"
                                                        class="mr-4 font-weight-bold" name="quantity" data-min="0"
                                                        data-max="<%= item.productId.stock %>">
                                                        <%= item.quantity %>
                                                    </span>
                                            
                                                    <!-- increment Button -->
                                                    <button class="cart-item-count btn btn-danger"
                                                        id="increment_<%= item.productId._id %>"
                                                        onclick="incrementQuantity('<%= item.productId._id %>', '<%= item.productId.stock %>')"
                                                        style="font-size: 12px; padding: 5px 10px;margin-left:12px; background-color: #088178; color: hsl(0, 20%, 94%);"
                                                        
                                                    >+</button>
                                                </div>
                                            </td>
                                            
                                            <!-- Cart quantity  ends here-->


                                            <td class="total price">
                                                <% var total=item.quantity * item.productId.price; %>
                                                    <h5> <span>₹</span><span id="product-total-price-<%= item.productId._id %>"
                                                            class="item-total"><%= total %></span></h5>
                                            </td>                                         
                                            <td class="action" data-title="Remove">
                                                <button class="btn btn-danger" onclick="confirmProductRemove(event, '<%= item._id %>')" id="Remove" onclick="productRemove('<%= item._id %>')"> Remove </button>
                                              </td>
                                        </tr>
                                        <% } %>
                                </tbody>
                            </table>
